<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="#f2f2f2">

    <TextView
        android:id="@+id/view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  ID : "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_bias="0.25"
        />
    <EditText
        android:id="@+id/editID"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_id"
        app:layout_constraintLeft_toRightOf="@id/view_id"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:autofillHints="아이디를 입력하세요" />

    <TextView
        android:id="@+id/view_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PW : "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/view_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintHorizontal_bias="0.25"
        android:layout_marginTop="25dp"
        />
    <EditText
        android:id="@+id/editPWD"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_pw"
        app:layout_constraintLeft_toRightOf="@id/view_pw"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:autofillHints="비밀번호를 입력하세요" />

    <TextView
        android:id="@+id/view_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PhoneNum : "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/view_pw"
        app:layout_constraintRight_toRightOf="@id/view_pw"
        app:layout_constraintVertical_bias="0.4"
        android:layout_marginTop="25dp"
        />
    <EditText
        android:id="@+id/editPhonenum"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_phone"
        app:layout_constraintLeft_toRightOf="@id/view_phone"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:autofillHints="핸드폰 번호를 입력하세요"
        />

    <Button
        android:id="@+id/doSignUp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_btn"
        android:text="회원가입하기"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.65"
        />

</androidx.constraintlayout.widget.ConstraintLayout>